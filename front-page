        <script> 
function search() {
var input1 = document.forms["Form"]["city"].value;
var input2 = document.forms["Form"]["name"].value;
var input3 =document.forms["Form"]["id"].value;
var xhttp;
 
    if ( input1== "" ) {
   document.getElementById("result").innerHTML = "";
   return;
    }
          
    else {
          
  xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (xhttp.readyState == 4 && xhttp.status == 200) {
      document.getElementById("result").innerHTML = xhttp.responseText;
    }
  };
         
  xhttp.open("GET", "get_ngo_bycity.php?city="+input1+"&name="+input2+"&id="+input3, true);
  xhttp.send();
          }
          
      /*  else if(input2 != null && !input2.isEmpty())
          {
  xhttp.open("GET", "get_ngo_byname.php?q="+input2, true);
  xhttp.send();
          }
          
          else if(input3 != null && !input3.isEmpty())
          {
  xhttp.open("GET", "get_ngo_byid.php?q="+input3, true);
  xhttp.send();
          }
          */
          
}
    
        </script>
